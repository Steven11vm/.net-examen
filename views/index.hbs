    <script>
        // Función para eliminar un servicio por su ID
        function eliminarServicio(idServicio) {
            // Alerta de confirmación
            Swal.fire({
                title: '¿Estás seguro?',
                text: 'Una vez eliminado, no podrás recuperar este servicio.',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Sí, eliminarlo',
                cancelButtonText: 'Cancelar',
                backdrop: false
            }).then((result) => {
                if (result.isConfirmed) {
                    // Si el usuario confirma la eliminación, se realiza la solicitud DELETE a la API
                    axios.delete(`http://localhost:5013/api/Peaje/${idServicio}`)
                        .then(response => {
                            // Si la eliminación es exitosa, se muestra una alerta de éxito
                            Swal.fire({
                                icon: "success",
                                title: "Eliminado correctamente",
                                showConfirmButton: false,
                                timer: 1500,
                                backdrop: false
                            });
                            console.log('Servicio eliminado exitosamente:', response.data);
                            // Se recarga la página para mostrar los cambios actualizados
                            setTimeout(() => { location.reload(); }, 1000);
                        })
                        .catch(error => {
                            // Si ocurre un error al eliminar el servicio, se muestra una alerta de error
                            Swal.fire(
                                'Error',
                                'Hubo un error al eliminar el servicio. Por favor, inténtalo de nuevo.',
                                'error'
                            );
                            console.error('Error al eliminar el servicio:', error);
                        });
                }
            });
        }

        document.addEventListener('DOMContentLoaded', function () {
            const apiUrl = 'http://localhost:5013/api/Peaje';
            const apiUrlDolar = 'https://api.exchangerate-api.com/v4/latest/USD';

            // Realizar la solicitud HTTP para obtener la tasa de cambio del dólar
            fetch(apiUrlDolar)
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Ocurrió un error al obtener la tasa de cambio del dólar.');
                    }
                    return response.json();
                })
                .then(data => {
                    // Obtener la tasa de cambio del dólar a pesos colombianos
                    const tasaDeCambio = data.rates.COP;
                    console.log('La tasa de cambio del dólar a pesos colombianos es:', tasaDeCambio);

                    // Realizar la solicitud HTTP para obtener los servicios
                    axios.get(apiUrl)
                        .then(response => {
                            const servicios = response.data;
                            // Actualizar los datos de cada servicio con la tasa de cambio
                            servicios.forEach(servicio => {
                                servicio.tasaDeCambio = tasaDeCambio;
                            });
                            renderServicios(servicios);
                        })
                        .catch(error => {
                            console.error('Error al obtener los servicios:', error);
                        });
                })
                .catch(error => {
                    console.error('Error al obtener la tasa de cambio del dólar:', error);
                });

            function renderServicios(servicios) {
                const tbody = document.getElementById('tabla-exportacion');
                tbody.innerHTML = '';

                servicios.forEach(servicio => {
                    const tr = document.createElement('tr');
                    tr.innerHTML = `
                    <td>
                        <div class="d-flex px-2 py-1">
                            <div class="d-flex flex-column justify-content-center">
                                <p class="text-xs font-weight-bold mb-0">${servicio.placa}</p>
                            </div>
                        </div>
                    </td>
                    <td>
                        <p class="text-xs font-weight-bold mb-0">${servicio.nombrePeaje}</p>
                    </td>
                    <td class="align-middle text-center text-sm">
                        <p class="text-xs font-weight-bold mb-0">${servicio.categoriaTarifaId}</p>
                    </td>
                    <td class="align-middle text-center">
                        <p class="text-xs font-weight-bold mb-0">${servicio.fechaRegistro}</p>
                    </td>
                    <td class="align-middle text-center">
                        <p class="text-xs font-weight-bold mb-0">${servicio.valor}</p>
                    </td>
                      <td class="align-middle text-center">
                        <p class="text-xs font-weight-bold mb-0">${servicio.observacion}</p>
                    </td>
                    <td>
                        <a class="Btn-shadow" href="/ver?id=${servicio.id}" style="margin-left: 15px; margin-bottom: 15px; float: inline-start;">
                            <svg xmlns="http://www.w3.org/2000/svg" height="10" class="svgIcon" width="11.25" viewBox="0 0 576 512">
